<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="#F5F5F5"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivEditar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_edit_purple"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#673AB7" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cbSeleccionada"
            app:layout_constraintStart_toEndOf="@+id/ivEditar"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvNombreArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Área verde 1"
                android:textColor="#673AB7"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvCodigoArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="324567"
                android:textColor="#673AB7"
                android:textSize="14sp" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/cbSeleccionada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#673AB7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>